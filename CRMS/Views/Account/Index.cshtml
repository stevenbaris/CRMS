@model List<IndexUserViewModel>

<table>
    <thead>
        <tr>
            <th>User Name</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.applicationUsers.</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span>@role.Name</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>