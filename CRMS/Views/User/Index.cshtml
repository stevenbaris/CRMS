@model IEnumerable<CRMS.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1><b>User List</b></h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Add New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                User Name
            </th>
            <th scope="col">
                Date of Birth
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName+" "+item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.RoleName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.UserId">Edit</a> 
                    <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.UserId">Details</a> 
                    <a asp-action="Delete" class="btn btn-outline-primary" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
