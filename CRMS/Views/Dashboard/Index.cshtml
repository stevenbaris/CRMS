<div class="dropdown">
    <h3 class="dropdown-toggle" id="my-dropdown" data-toggle="dropdown">Dashboard <span class="caret"></span></h3>
    <div class="dropdown-menu" aria-labelledby="my-dropdown">
        <input type="text" class="search-input" placeholder="Search...">
        <ul >
            <li><a class="dropdown-item" href="#" data-value="Employee Access">Option 1</a></li>
            <li><a href="#">Option 2</a></li>
            <li><a href="#">Option 3</a></li>
            <li><a href="#">Option 4</a></li>
            <li><a href="#">Option 5</a></li>
        </ul>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').click(function () {
                $(this).siblings('.dropdown-menu').toggle();
            });

            $('.search-input').keyup(function () {
                var filter = $(this).val().toLowerCase();
                var options = $(this).siblings('.options').find('li');

                options.each(function () {
                    if ($(this).text().toLowerCase().indexOf(filter) !== -1) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
        
    </script>
}