@model Contacts

<div class="w3-container">
    <form class="w3-container " asp-controller="Contacts" asp-action="RemoveConfirmed">
        <div class="w3-section w3-card " style="max-width:600px">
            <div class="w3-container  w3-padding-16 ">
                <h3 class="w3-center">Are you sure you want to delete this contact?</h3>

                <button type="submit" class="w3-button w3-right w3-green">DELETE</button>
                <a asp-action="ViewAll" type="button" class="w3-button w3-red">Back</a>
            </div>
        </div>
    </form>
</div>