
@section Styles{
<style>
        .contact-details {
          display: flex;
          height: 100vh;
        }

        .left-section {
          position: sticky;
          top: 0;
          width: 30%;
          height: 100%;
          background-color: #f2f2f2;
        }

        .right-section {
          width: 70%;
          height: 100%;
          overflow: auto;
        }

        .tabs {
          background-color: #ddd;
          overflow: hidden;
        }

        .tablinks {
          background-color: #ccc;
          border: none;
          outline: none;
          cursor: pointer;
          padding: 10px 20px;
          float: left;
        }

        .tablinks.active {
          background-color: #bbb;
        }

        .tabcontent {
          display: none;
          padding: 20px;
        }

        .tabcontent.active {
          display: block;
        }

        .profile-pic {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            overflow: hidden;
            background-color: #ccc; /* default background color */
        }

        .pic-initials {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 30px;
            font-weight: bold;
            color: #fff;
            text-transform: uppercase;
        }

</style>
}
