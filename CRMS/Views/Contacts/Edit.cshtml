@model Contacts 

<h2>Update Contact</h2>
<form id="contactForm" class="w3-container" asp-controller="Contacts" asp-action="Edit" >
    <div class="w3-section">
        <input type="hidden" asp-for="Contact_Id" />
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">First Name:</label>
            <input asp-for="FirstName" class="form-control" placeholder="Ex. Juan" required/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label">Last Name:</label>
            <input asp-for="LastName" class="form-control" placeholder="Ex. Dela Cruz" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label">Email:</label>
            <input asp-for="Email" class="form-control" placeholder="Ex. juandelacruz@crms.com" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Phone Number:</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Ex. 09XXXXXXXX" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="control-label">Gender:</label>
            <select asp-for="Gender" class="form-control" required>
                <option>-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DOB" class="control-label">Date of Birth:</label>
            <input asp-for="DOB" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" required  />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactOwnerID" class="control-label">Contact Owner:</label>
            @if (ViewBag.OwnerList != null)
            {
                @Html.DropDownListFor(model => model.ContactOwnerID, (IEnumerable<SelectListItem>)ViewBag.OwnerList, "Select Owner", new { @class = "form-control" })
                @*<select asp-for="ContactOwnerID" class="form-control" asp-items="ViewBag.OwnerList"></select>*@
                    

               @* @foreach (var user in Model.AppUsers)
                {
                    <option value="@user.Id">@String.Concat(user.FirstName +" "+ user.LastName)</option>
                }*@
            
            }
            <span asp-validation-for="ContactOwnerID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateAssigned" class="control-label">Date Assigned:</label>
            <input asp-for="DateAssigned" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" required />
            <span asp-validation-for="DateAssigned" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactCreatorID" class="control-label">Contact Creator:</label>
            @*<input type="hidden" asp-for="ContactCreatorID" class="form-control" value="@Model.Contacts.ContactCreatorID" readonly />*@
            @*<input class="form-control" value="@String.Concat(Model.AppUsers.FirstOrDefault(u => u.Id == Model.Contacts.ContactCreatorID)?.FirstName, ' ', Model.AppUsers.FirstOrDefault(u => u.Id == Model.Contacts.ContactCreatorID)?.LastName)" readonly />*@
            @if (ViewBag.CreatorList != null)
            {
                @Html.DropDownListFor(model => model.ContactCreatorID, (IEnumerable<SelectListItem>)ViewBag.CreatorList, "Select Creator", new { @class = "form-control" })
                @*<select asp-for="ContactOwnerID" class="form-control" asp-items="ViewBag.CreatorList"> </select>*@

               @* @foreach (var user in Model.AppUsers)
                {
                    <option value="@user.Id">@String.Concat(user.FirstName +" "+ user.LastName)</option>
                }*@
           
            }
            <span asp-validation-for="ContactCreatorID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CreateDate" class="control-label">Create Date:</label>
            <input type="text" class="form-control" value="@DateTime.Today.ToShortDateString()" readonly />
            <input asp-for="CreateDate" type="hidden" class="form-control" value="@DateTime.UtcNow" readonly />
            @*@Html.DisplayFor(model => model.Contacts.CreateDate, new { htmlAttributes = new { @class = "form-control" } })*@
            @*<input asp-for="CreateDate" class="form-control" required />*@
            <span asp-validation-for="CreateDate" class="text-danger"></span>
        </div>

        
        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
            <button type="submit" class="w3-button w3-right w3-green">SAVE</button>
            <button onclick="document.getElementById('CreateModal').style.display='none'" type="button" class="w3-button w3-red">Cancel</button>
        </div>
</form>
<div>
    <a asp-action="ViewAll">Back to List</a>
</div>