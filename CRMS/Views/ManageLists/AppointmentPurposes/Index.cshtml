@model IEnumerable<CRMS.Models.Customization.AppointmentPurpose>

@{
    ViewData["Title"] = "Purpose";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Appointment: @ViewBag.Title</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurposeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurposeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Purpose_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Purpose_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Purpose_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
