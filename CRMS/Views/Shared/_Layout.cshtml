@inject SignInManager<ApplicationUser> _signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Core CRMS</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRMS.styles.css" asp-append-version="true" />
    @*-Font-*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    @*---*@
    <link rel="shortcut icon" href="/img/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://www.w3schools.com/lib/w3-colors-highway.css">


    @await RenderSectionAsync("Styles", required: false)

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light cebuana-bg-blue border-bottom box-shadow" style="width:100%vw">
            <div class="container-fluid">
                <a class="navbar-brand navbar-logo me-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/svglogo1.svg" alt="Core - CRMS Tool" height="40px" />
                </a>
                <button class="navbar-toggler border-light btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon custom-toggler "></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!--  This Here is the TOP NAVBAR   -->
                    <ul class="navbar-nav flex-grow-1">

                        @if (_signInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Index">Sales</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index">Sales</a>
                                </li>
                            }

                            <li class="nav-item mx-3">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Marketing">Marketing</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="CustomerService">Customer Service</a>
                            </li>

                        }
                    </ul>

                       

                    <ul class="navbar-nav my-2 my-lg-0">
                        @if (_signInManager.IsSignedIn(User))
                        {
                            <div class="dropdown">
                                <a href="#" class="d-flex navbar-brand align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/img/user_m.svg" alt="" width="32" height="32" class="rounded-circle me-2">
                                    <strong>@User.Identity.Name</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark cebuana-bg-blue text-small shadow" aria-labelledby="dropdownUser1" style="">
                                    <li>
                                        <div class="container-fluid">
                                            <div class="d-flex align-items-center flex-column p-1">
                                                <img src="~/img/user_m.svg" alt="User" style="width:80%">
                                                <h4><strong>@User.Identity.Name</strong></h4>
                                                <p class="title">CEO & Founder, Example</p>
                                                <p>Harvard University</p>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Manage Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Logout">Log out</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    
    <!--  This Here is the SIDEBAR   -->
    <div>
        <div class="d-flex">
            <div class="navbarnew">
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Dashboard" asp-action="Index">
                            <span class="icon"><i class="bi bi-speedometer2"></i></span>
                            <span class="title">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Contacts" asp-action="ViewAll">
                            <span class="icon"><i class="bi bi-person-rolodex"></i></span>
                            <span class="title">Contacts</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Leads" asp-action="Index">
                            <span class="icon"><i class="bi bi-node-plus"></i></span>
                            <span class="title">Leads</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Engagement" asp-action="Index">
                            <span class="icon"><i class="bi bi-send"></i></span>
                            <span class="title">Engagements Tracking</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Appointments" asp-action="Index">
                            <span class="icon"><i class="bi bi-calendar2-date"></i></span>
                            <span class="title">Appointments</span>
                        </a>
                    </li>                             
                </ul>     
            </div> 
            <div class="w3-responsive flex-fill d-flex flex-column">
                <main role="main" style="margin: 50px;">
                    @RenderBody()
                </main>
            </div>
        </div>  
    </div>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
