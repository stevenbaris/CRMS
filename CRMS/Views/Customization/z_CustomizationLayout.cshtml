@{
    Layout = "_Layout";
}

@section Styles{
    <link href="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.21.4/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.21.4/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.21.4/extensions/filter-control/utils.min.js"></script>

}

<header class="card1">
    <div class="w3-container position-relative">
        <main role="main" class="pb-3 position-relative">
            <div>
                <center><h1 style="font-weight: bold; font-family: Poppins; color:#002756">Customization</h1></center>
                <hr />
                <br />
                @*<p></a>int Count</p>*@
            </div>

            <div class="w3-bar cebuana-bg-blue" style=" border: 1px solid #002756;
              border-radius: 20px;">
                    <a asp-controller="Role" asp-action="Index" class="w3-bar-item w3-button text-white">Roles</a>
                    <a asp-controller="AppointmentPurposes" asp-action="Index" class="w3-bar-item w3-button text-white" data-tab="purpose">Purpose</a>
                    <a asp-controller="CommunicationMethods" asp-action="Index" class="w3-bar-item w3-button text-white" data-tab="communication">Communication Method</a>
                    <a asp-controller="EngagementTypes" asp-action="Index" class="w3-bar-item w3-button text-white" data-tab="engagement">Engagement Types</a>
                    <a asp-controller="Effectivities" asp-action="Index" class="w3-bar-item w3-button text-white" data-tab="effectivity">Effectivity</a>
                    <a asp-controller="LeadStatus" asp-action="Index" class="w3-bar-item w3-button text-white" data-tab="lead-status">Lead Status</a>
                    <a asp-controller="Sources" asp-action="Index" class="w3-bar-item w3-button text-white" data-tab="lead-source">Lead Source</a>
                </div>

                <div class="p-3">
                    @RenderBody()
                </div>
               
        </main>
    </div>
</header>


@section Scripts{
    @await RenderSectionAsync("Scripts1", required: false)
    <script>
        $(function () {
            // Listen for click events on the navigation links
            $('.nav-link').on('click', function () {
                // Remove the active class from all links
                $('.nav-link').removeClass('active');
                // Add the active class to the clicked link
                $(this).addClass('active');
                // Get the value of the data-tab attribute 
                var tab = $(this).data('tab');
                // Set the ID of the content section to the data-tab attribute
                //$('#content').attr('id', tab);
                //and show the corresponding tab
                $('#' + tab).show().siblings().hide();
            });
        });
    </script>
}