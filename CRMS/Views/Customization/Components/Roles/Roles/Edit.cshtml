@model EditRoleViewModel

@{
    Layout = "~/Views/Customization/z_CustomizationLayout.cshtml";
}
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="mt-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Account</li>
        <li class="breadcrumb-item">Roles</li>
        <li class="breadcrumb-item active" aria-current="page">Update</li>
    </ol>
</nav>

<h3>Modify</h3>
<hr />
<div class="row">

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id" />
        <span asp-validation-for="@Model.Roles.Name" class="text-danger"></span>
        <div class="d-flex form-group justify-content-between ">
            <label asp-for="@Model.RoleName" class="control-label   flex-fill"></label>
            <input asp-for="@Model.RoleName" class="form-control flex-fill" />
            <input type="submit" value="Save" class="btn w3-green w3-hover-black mx-5">
        </div>

    </form>

</div>

