@model CreateRoleViewModel

@{
    Layout = "~/Views/Customization/z_CustomizationLayout.cshtml";
}

<h1>Add Role</h1>

<form asp-controller="Role" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div>
