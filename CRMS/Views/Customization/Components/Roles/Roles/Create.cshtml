@model CreateRoleViewModel

@{
    Layout = "~/Views/Customization/z_CustomizationLayout.cshtml";
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="mt-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Account</li>
        <li class="breadcrumb-item">Roles</li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<h3>Create </h3>
<hr />
<div class="row">
    <form asp-controller="Role" asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <span asp-validation-for="RoleName" class="text-danger"></span>
        <div class="d-flex form-group justify-content-between ">
            <label asp-for="RoleName" class="control-label flex-fill"></label>
            <input asp-for="RoleName" class="form-control flex-fill" required />
            <input type="submit" value="Save" class="btn w3-green w3-hover-black mx-5">
        </div>
  
    </form>
</div>
<div>
    <br />
    <a asp-action="Index">Back to List</a>
</div>