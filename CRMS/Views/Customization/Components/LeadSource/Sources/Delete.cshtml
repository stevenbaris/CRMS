@model CRMS.Models.Customization.Source

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Customization/z_CustomizationLayout.cshtml";
}

<div class="mt-3">
    <h2 style="font-weight: bold; font-family: Poppins; color:#002756">Delete Lead Source</h2>
    <hr />
    <p style="color: gray">Customization > Lead Source > Delete</p>
    <br />
    @*<p></a>int Count</p>*@
    <br />
</div>

<form class="row g-3 needs-validation" style=" border: 2px solid lightgray;
    border-radius: 20px; padding: 35px;" novalidate asp-action="Delete">

    <input type="hidden" asp-for="Source_Id" />

    <h4 style="font-weight: bold; font-family: Poppins; color:#002756">Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row d-flex">
        <dt class="flex-fill">
            <h5 style="color: gray">
                @Html.DisplayNameFor(model => model.SourceName)
            </h5>

        </dt>
        <dd>
            <h4 style="color: #002756">
                @Html.DisplayFor(model => model.SourceName)
            </h4>
        </dd>
    </dl>

    <div class="col-12">
        <br />
        <button type="submit" class="btn btn-danger">Delete</button>
        <button onclick="history.go(-1)" class="btn btn-secondary">Cancel</button>
    </div>

</form>

